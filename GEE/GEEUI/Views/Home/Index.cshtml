@{
    ViewBag.Title = "Home Page";
    Layout = null;
    @Styles.Render("~/Content/css")    
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    
}
<script>
    function formatar(mascara, documento) {
        var i = documento.value.length;
        var saida = mascara.substring(0, 1);
        var texto = mascara.substring(i)

        if (texto.substring(0, 1) != saida) {
            documento.value += texto.substring(0, 1);
        }
    }
</script>
<div class="navbar-fixed-top navbar-default">
    <div class="navbar-inner">
        <div class="container">
            <br />
            <form name="LoginAdm" class="form-horizontal " method="post" action="LoginAdm">
                <input class="navbar-collapse form-control-static" type="text" placeholder="CPF" name="CpfAdm" onkeypress="formatar('###.###.###-##', this)" maxlength="14" required />
                <input class="navbar-collapse form-control-static" type="password" placeholder="senha" name="SenhaAdm" required />
                <button class="btn-default btn" type="submit"  >
                  Entrar
                </button>
            </form>
        </div>
    </div>
</div>


<div class="content" aling="center">
    <div class="span12">
        <div class="info" >
            <h1 class="text-center" >
                <p align="center">
                    <font size="+5" color="red" face="Comic Sans MS, cursive">

                        &nbsp;
                    </font>
                </p>
                <p>
                    <font size="28" color="gray" face="Book Antiqua">
                         Gerenciador de Eventos
                    </font>
                   
                </p>
                
            </h1>
        </div>
        <p align="center">
            <font size="+4" color="red" face="Comic Sans MS, cursive">

                &nbsp;
            </font>
        </p>

    </div>
    <div class="row" align="center">
        <table class="table-bordered  " >
            <tbody>
                <tr>
                    <td width="256" height="218">
                        <form class="form-group" method="post" action="ListaEventos">
                            <input type="text" onkeypress="formatar('###.###.###-##', this)" placeholder="CPF" class="form-control" maxlength="14" required value="" />
                            <br />
