@model GEEData.Eventos
@{
    Layout = null;
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DetailEvent</title>
</head>
<body>
    <div class="col-md-4 col-md-offset-4 " > 
        
            <div class="panel panel-default">
                <div class="panel-heading">Detalhes Evento</div>
                <div class="panel-body">
                   
                        <center><h4>@Model.nome</h4></center>
                        <br />
                        
                            <div class="row">
                                <div class="col-md-4">Quantida de Horas:@Model.qtd_horas</div>
                                <div class="col-md-4">Cidade:@Model.cidade</div>
                                <div class="col-md-4">Data:@Model.data</div>                                
                            </div>
                        <textarea class="form-control" rows="2">@Model.descricao</textarea>
                    <div class="col-xs-6 col-sm-3"></div>
                    <div class="col-xs-6 col-sm-3"></div>
                    <div class="col-xs-6 col-sm-3">
                        <button class="btn btn-default">@Html.ActionLink("Voltar","ListaEventos","Home")</button>
                    </div>
                        <div class="col-xs-6 col-sm-3">
                            <button class="btn btn-default">Inscrever-se</button>
                        </div>



                    </div>
            </div>
        
    </div>
</body>
</html>
