                        </form> 
                    </td>    
                    <td width="256" height="218" align="center" valign="middle">                        
                        
                        <center><button class="btn btn-default" data-toggle="modal" data-target="#Cadastro">Cadastre-se</button></center>

                    </td>                
                </tr>

            </tbody>

        </table>

    </div>
    
    
</div>



<!-- Modal -->
<div class="modal fade" id="Cadastro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <center><h4 class="modal-title" id="myModalLabel">Cadastro</h4></center>
            </div>
            <div class="modal-body">
                <!-- Corpo do Cadastro-->
                <form class="panel-body" name="formCadastrarPessoa" method="post" action="CadastrarPessoa">
                    <div class="col-xs-6">
                        <input class="form-control" type="text" placeholder="Nome" name="NomeCadastrar" />
                        <br />

                        <input class="form-control" type="tel" placeholder="Telefone" name="TelCadastras" />
                    </div>
                    <div class="col-xs-6">
                        <input class="form-control" type="text" placeholder="CPF" name="CPFCadastrar" maxlength="14" onkeypress="formatar('###.###.###-##', this)" />
                        <br />
                        <input class="form-control" type="email" placeholder="E-mail" name="EmailCadastrar" />
                    </div>
</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success">Cadastrar </button>
            </div>
            </form>
        </div>
    </div>
</div>

